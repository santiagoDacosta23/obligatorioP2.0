@using Dominio;




<h1>Lista Pasajes</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>RUTA</th>
            <th>FECHA</th>
            <th>PASAJERO</th>
            <th>EQUIPAJE</th>
            <th>PRECIO</th>
        </tr>
    </thead>
    @foreach (Pasaje pasaje in ViewBag.listaPasajes)
    {
        <tbody>
            <tr>
                <td>@pasaje.Id</td>
                <td>@pasaje.DevolverAeropuertos()</td>
                <td>@pasaje.Fecha.ToString("dd/MM/yyyy")</td>
                <td>@pasaje.DevolverNombrePasajero()</td>
                <td>@pasaje.Equipaje</td>
                <td>@pasaje.CalcularPrecioPasaje().ToString("C")</td>
            </tr>
        </tbody>
    }
</table>


<style>
    table {
        border-collapse: collapse;
        width: 90%;
        margin: auto;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        box-shadow: 0 0 8px rgba(76, 175, 80, 0.3);
        border-radius: 10px;
        overflow: hidden;
        background-color: #ffffff;
    }

    th, td {
        border: 1px solid #a5d6a7;
        padding: 10px 15px;
        text-align: center;
        transition: background-color 0.3s ease;
    }

    thead th {
        background: linear-gradient(90deg, #388e3c, #66bb6a);
        color: white;
        font-weight: 600;
        font-size: 1rem;
        letter-spacing: 0.05em;
    }

    tbody tr:nth-child(even) {
        background-color: #e8f5e9;
    }

    tbody tr:hover {
        background-color: #c8e6c9;
        cursor: pointer;
    }

    h1 {
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #2e7d32;
        margin-bottom: 25px;
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 0.1em;
    }
</style>
